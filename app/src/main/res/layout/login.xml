<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FEDBA8"
        android:orientation="vertical">

        <!--<Button-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_gravity="center_horizontal"-->
            <!--android:layout_marginTop="80dp"-->
            <!--android:background="@drawable/button_shape"-->
            <!--android:paddingBottom="12dp"-->
            <!--android:paddingLeft="40dp"-->
            <!--android:paddingRight="40dp"-->
            <!--android:paddingTop="12dp"-->
            <!--android:text="@string/app_name"-->
            <!--android:textSize="22sp" />-->

        <Button
        android:layout_width="150dp"
        android:layout_height="60dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="80dp"
        android:background="@drawable/tangdaizi"
        />
        <EditText
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="40dp"
            android:hint="账号"
            android:textColorHint="@android:color/white"
            android:theme="@style/MyEditText" />

        <EditText
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="30dp"
            android:hint="密码"
            android:textColorHint="@android:color/white"
            android:theme="@style/MyEditText" />

        <Button
            android:id="@+id/login_button"
            android:layout_width="280dp"
            android:layout_height="35dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="40dp"
            android:background="@drawable/submit_shape"
            android:text="登陆"
            android:textColor="@color/submit_button_text_color"
            android:textSize="20sp" />


        <TextView
            android:id="@+id/registe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:text="没有账号？注册一个"
            android:textColor="@android:color/white" />

    </LinearLayout>
    <RelativeLayout
        android:layout_above="@id/bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp">

        <TextView
            android:id="@+id/tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginLeft="5dip"
            android:layout_marginRight="5dip"
            android:text="直接登录"
            android:textSize="10sp"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="#BBA380" />

        <TextView
            android:id="@+id/textView1"
            android:layout_width="100dip"
            android:layout_height="0.8dip"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/tv"
            android:background="#BBA380" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="100dip"
            android:layout_height="0.8dip"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/tv"
            android:background="#BBA380" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_centerHorizontal="true"
        android:id="@+id/bottom"
        android:layout_alignParentBottom="true"
        android:layout_width="500dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp">


        <ImageView
            android:layout_marginRight="46dp"
            android:layout_marginLeft="46dp"
            android:id="@+id/iv_weibo"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_centerInParent="true"
            android:src="@drawable/weibo"/>

        <ImageView
            android:id="@+id/iv_weixin"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_toLeftOf="@id/iv_weibo"
            android:src="@drawable/weixin" />

        <ImageView
            android:id="@+id/iv_qq"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_toRightOf="@+id/iv_weibo"
            android:src="@drawable/qq"/>
    </RelativeLayout>
</RelativeLayout>