<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@drawable/public_edit_bg_no_stroke"
        android:gravity="center"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:minHeight="100dip"
            android:orientation="vertical" >


            <TextView
                android:id="@+id/public_exit_content"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dip"
                android:gravity="center"
                android:lineSpacingMultiplier="1.1"
                android:maxLines="12"
                android:padding="10dp"
                android:scrollbars="vertical"
                android:textColor="@color/white"
                android:textSize="19sp" />
        </LinearLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="01dp"
            android:background="@color/updata_text_color_E5" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/public_exit_cancle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/public_btn_cancle"
                android:gravity="center"
                android:padding="12dp"
                android:text="基础"
                android:textColor="#F9C535"
                android:textSize="20sp" />

            <View
                android:id="@+id/public_exit_line"
                android:layout_width="01dp"
                android:layout_height="fill_parent"
                android:background="@color/updata_text_color_E5" />

            <TextView
                android:id="@+id/public_exit_submit"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/public_btn_submit"
                android:gravity="center"
                android:padding="12dp"
                android:text="高级"
                android:textColor="#F9C535"
                android:textSize="20sp" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>