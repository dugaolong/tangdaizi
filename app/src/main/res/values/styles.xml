<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="MyEditText" parent="Theme.AppCompat.Light">
        <!-- AppCompatEditText默认状态状态设置底线颜色 -->
        <item name="colorControlNormal">@android:color/darker_gray</item>
        <!-- AppCompatEditText选择的底线颜色 -->
        <item name="colorControlActivated">@android:color/darker_gray</item>
    </style>

    <!-- ActionBar 样式集 -->
    <style name="ActionBar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:background">@color/colorPrimary</item>
    </style>
    <style name="ActionBar.RightText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:clickable">true</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginRight">8dp</item>
        <item name="android:padding">8dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:background">@drawable/selector_common_item_press</item>
    </style>

    <!-- 标题样式 -->
    <style name="TitleStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">46dp</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:background">@color/colorPrimary</item>
    </style>
    <style name="ActionBar.LeftImage">
        <item name="android:layout_width">@dimen/left_back_width</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:clickable">true</item>
        <item name="android:onClick">onBackPressed</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:src">@drawable/back_up</item>
        <item name="android:scaleType">fitXY</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:paddingRight">5dp</item>
        <item name="android:background">@drawable/selector_common_item_press</item>
        <item name="android:contentDescription">@null</item>
        <item name="android:layout_alignParentLeft">true</item>
    </style>
    <style name="ActionBar.CenterTitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">22sp</item>
    </style>
    <style name="ActionBar.RightImage">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:clickable">true</item>
        <item name="android:background">@drawable/selector_common_item_press</item>
        <item name="android:contentDescription">@null</item>
        <item name="android:padding">4dp</item>
        <item name="android:layout_centerInParent">true</item>

        <item name="android:layout_alignParentRight">true</item>
    </style>

    <style name="left_title_style">
        <item name="android:onClick">back</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_marginLeft">3dp</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="mediumCustomProgressBar" parent="@android:style/Widget.ProgressBar">
        <item name="android:indeterminateDrawable">@drawable/progress_medium_holo</item>
    </style>

    <style name="custom_dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowAnimationStyle">@style/DialogAnimation</item>
    </style>
    <style name="DialogAnimation" parent="@android:style/Animation">
        <item name="android:windowEnterAnimation">@anim/appear</item>
        <item name="android:windowExitAnimation">@anim/disappear</item>
    </style>
    <!-- video -->
    <style name="MediaController_Text">
        <item name="android:textColor">#ffffffff</item>
        <item name="android:textSize">11sp</item>
    </style>
    <style name="VideoStyle" parent="android:Theme.Light.NoTitleBar"></style>
    <style name="LibraryVideoMediaControllerSeekBar" parent="android:Widget.SeekBar">
        <item name="android:progressDrawable">@drawable/library_video_layer_sbar_bg</item>
        <item name="android:minHeight">1dp</item>
        <item name="android:maxHeight">1dp</item>
        <item name="android:thumb">@drawable/library_video_selector_sbar_thumb</item>
    </style>
    <style name="progressbar_style2">
        <item name="android:maxWidth">40.0dip</item>
        <item name="android:maxHeight">40.0dip</item>
        <item name="android:indeterminateDrawable">@drawable/anim_loading2</item>
        <item name="android:minWidth">40.0dip</item>
        <item name="android:minHeight">40.0dip</item>
    </style>
</resources>
